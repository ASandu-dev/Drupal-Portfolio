
{% import _self as menus %}

<nav>
{{ menus.menu_links(items, attributes, 0) }}
</nav>
{% macro menu_links(items, attributes, menu_level) %}
  {% import _self as menus %}
  {% if items %}
    {% if menu_level == 0 %}
      <ul{{ attributes.addClass('nav-ul').setAttribute('id', 'nav-ul') }}>
    {% else %}
      <ul>
    {% endif %}
    {% for item in items %}
      <li{{ item.attributes }}>
        {{ link(item.title, item.url) }}
        {% if item.below %}
          {{ menus.menu_links(item.below, attributes, menu_level + 1) }}
        {% endif %}
      </li>
    {% endfor %}
        <li id="toggle"><i class="fa-solid fa-bars"></i></li>
    </ul>
  {% endif %}
{% endmacro %}
