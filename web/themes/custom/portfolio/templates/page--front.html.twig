        </div>
      </div>
      <!-- Right-side image -->
      <div class="w-auto h-auto z-0 xs:hidden md:block">
          <img class="sm:h-[80%] animate-vertical"
            src="themes/custom/portfolio/assets/images/hero-img.png"
            alt="desk_image" />
        </div>

    </section>

    <!-- About Section -->
