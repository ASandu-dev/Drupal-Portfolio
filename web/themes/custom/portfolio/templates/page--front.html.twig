  <nav class="flex justify-between z-10 h-32 xs:px-16 lg:px-64 bg-transparent items-center">
    <div class="flex h-11 py-2 w-auto mr-1 items-center">
      {{ page.branding }}
    </div>

    <div>
      {{ page.primary_menu }}
    </div>
  </nav>
  {# Body #}
  <div class="main">

    <!-- Hero Section -->
    <section class="w-full h-[100vh] -mt-32 flex xs:p0 lg:p-64 justify-center align-center background-image">

      <!-- Leftside text -->
      <div class="flex my-16 items-center self-center">
        <div class="flex-col w-full h-full inline-block content-center px-5">
          <div class="align-super py-20">
            <h1 class="font-['Roboto'] text-4xl text-white">
              Hi I am Andrei Sandu
            </h1>
            <p class="font-['Roboto'] text-xl text-white mb-8">
              I love technology and love to learn as much as possible about it
            </p>
            <a class="font-['Roboto'] text-2xl text-white mt-6 p-2 border-2 rounded-md hover:bg-white hover:text-purple-700 transition" href="#about">
